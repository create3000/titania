<style-scheme id="x_ite" _name="X_ITE" version="1.0">
  <author>CREATE3000</author>
  <_description>X_ITE color scheme</_description>

  <!-- The scheme tries to look like the default GVim scheme,
       since it is also what the hardwired GtkSourceView 1 color
       scheme did -->

  <!-- Palette -->
  <color name="black"      value="#000000"/>
  <color name="white"      value="#abb2bf"/>
  <color name="blue"       value="#4ba4ed"/>
  <color name="red"        value="#e06c75"/>
  <color name="cyan"       value="#6ce0dd"/>
  <color name="green"      value="#98c379"/>
  <color name="orange"     value="#c88648"/>
  <color name="magenta"    value="#ba32a2"/>
  <color name="yellow"     value="#e5c07b"/>
  <color name="violet"     value="#c678dd"/>
  <color name="gray"       value="#5c6370"/>
  <color name="bordeaux"   value="#99394e"/>
  <color name="purple"     value="#dd78cb"/>

  <!-- Global Settings -->
  <style name="current-line"                background="#2c323c"/>
  <style name="current-line-number"         background="#777d88"/>
  <style name="draw-spaces"                 foreground="#282c34"/>
  <style name="background-pattern"          background="#282c34"/>

  <!-- Bracket Matching -->
  <style name="bracket-match"               foreground="white" background="gray"/>
  <style name="bracket-mismatch"            foreground="white" background="red"/>

  <!-- Right Margin -->
  <style name="right-margin"                foreground="black" background="black"/>

  <!-- Search Matching -->
  <style name="search-match"                foreground="black" background="yellow"/>

  <!-- Comments -->
  <style name="def:comment"                 foreground="gray"/>
  <style name="def:shebang"                 foreground="blue" bold="true"/>
  <style name="def:doc-comment-element"     italic="true"/>


  <!-- Identifiers -->
  <!-- Statements -->
  <style name="def:identifier"              foreground="cyan"/>
  <style name="def:keyword"                 foreground="violet"/> <!--- keyword -->
  <style name="def:statement"               foreground="red"/> <!--- properties -->
  <style name="def:builtin"                 foreground="cyan"/> <!--- function -->

  <!-- Types -->
  <style name="def:type"                    foreground="orange"/>

  <!-- Constants -->
  <style name="def:constant"                foreground="green"/>
  <style name="def:boolean"                 foreground="orange"/>
  <style name="def:decimal"                 foreground="yellow"/>
  <style name="def:base-n-integer"          foreground="yellow"/>
  <style name="def:floating-point"          foreground="yellow"/>
  <style name="def:complex"                 foreground="yellow"/>
  <style name="def:character"               foreground="yellow"/>
  <style name="def:string"                  foreground="green"/>
  <style name="def:special-char"            foreground="magenta"/>
  <style name="def:special-constant"        foreground="orange"/>

  <!-- Others -->
  <style name="def:preprocessor"            foreground="purple"/>
  <style name="def:error"                   foreground="purple"/>
  <style name="def:warning"                 background="yellow"/>
  <style name="def:note"                    foreground="blue" background="yellow" bold="true"/>
  <style name="def:underlined"              italic="true" underline="single"/>

  <style name="js:object"                   foreground="orange"/>
  <style name="js:constructors"             foreground="orange"/>

</style-scheme>
