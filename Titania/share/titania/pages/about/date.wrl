#VRML V2.0 utf8

META "icon" "../../ui/icons/icon-bw.svg"
META "title" "about:date"

DEF None NavigationInfo {
  type [
    "NONE",
    "ANY"
  ]
}

DEF White Background {
  skyColor 1 1 1
}

DEF Logo Transform {
  translation -1.32437 3.27246 -1
  scale 1.00059 1.00059 1.00059
  center 0.00357008 -0.00325632 0
  children DEF Background Inline {
    url "library/logo.wrl"
  }
}

DEF Rectangle2D Transform {
  translation 0 0 -0.5
  scale 20 0.75 1
  children Shape {
    appearance Appearance {
      material Material { }
    }
    geometry Rectangle2D { }
  }
}

DEF Text Transform {
  children Shape {
    appearance Appearance {
      material Material {
        diffuseColor 0 0 0
      }
    }
    geometry DEF Time Text {
      string "Mo 10 MÃ¤r 2014 19:07:33 CET"
      length 10
      fontStyle FontStyle {
        family "TYPEWRITER"
        style "BOLD"
        size 0.735
        justify [
          "MIDDLE",
          "MIDDLE"
        ]
      }
    }
  }
}

DEF Timer TimeSensor {
  loop TRUE
}

DEF DateScript Script {
  eventIn SFTime set_time
  field   SFNode time USE Time

  url "vrmlscript:
function set_time (value)
{
	time .string = new MFString (new Date (value * 1000) .toLocaleString ());
}
"
  directOutput TRUE
}

ROUTE Timer.cycleTime TO DateScript.set_time
