#VRML V2.0 utf8

META "icon" "about:icon"
META "title" "about:date"

Inline {
  url "background.wrl"
}

Transform {
  translation -5 0 0
  children Shape {
    appearance Appearance {
      material Material {
        diffuseColor 0 0 0
      }
    }
    geometry DEF Time Text {
      fontStyle FontStyle {
        family "Ubuntu Mono"
        size 0.735
      }
    }
  }
}

DEF Timer TimeSensor {
  loop TRUE
}

DEF RandomText Script {
  eventIn SFTime set_time
  field   SFNode time USE Time

  url "vrmlscript:
function set_time (value)
{
	time .string = new MFString (new Date (value * 1000) .toLocaleString ());
}
  "
}

ROUTE Timer.cycleTime TO RandomText.set_time
