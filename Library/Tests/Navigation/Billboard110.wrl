DEF Billboard Billboard {
  axisOfRotation 1 1 1
  children DEF XForm Transform {
    children [
      Transform {
        rotation 1 0 0 1.5708
        children Shape {
          appearance Appearance {
            material Material { }
          }
          geometry Cone { }
        }
      }
      Shape {
        appearance Appearance {
          material Material { }
        }
        geometry IndexedLineSet {
          colorIndex [ 0, 1, -1, 2, 3, -1 ]
          coordIndex [ 0, 1, -1, 2, 3, -1 ]
          color Color {
            color [ 0 0 0, 1 1 1, 0 0 0, 1 1 1 ]
          }
          coord DEF Local Coordinate {
            point [ -2 0 0, 2 0 0, 0 -2 0, 0 2 0 ]
          }
        }
      }
      Transform {
        translation 2 0 0
        scale 0.5 0.5 0.5
        children Billboard {
          axisOfRotation 0 0 0
          children Shape {
            appearance Appearance {
              material Material {
                diffuseColor 0 0 0
              }
            }
            geometry Text {
              string "x"
            }
          }
        }
      }
      Transform {
        translation 0 2 0
        scale 0.5 0.5 0.5
        children Billboard {
          axisOfRotation 0 0 0
          children Shape {
            appearance Appearance {
              material Material {
                diffuseColor 0 0 0
              }
            }
            geometry Text {
              string "y"
            }
          }
        }
      }
    ]
  }
}

# Axis of rotation
Transform {
  children [
    DEF AxisSensor SphereSensor {
      offset -0.707107 0.707107 0 0.955316
    }
    DEF AxisOfRotation Transform {
      rotation -0.707107 0.707107 0 0.955316
      children [
        Transform {
          translation 0 0 2
          rotation 1 0 0 1.5708
          scale 0.1 0.1 0.1
          children Shape {
            appearance Appearance {
              material Material {
                diffuseColor 0 1 0
              }
            }
            geometry Cone { }
          }
        }
        Transform {
          translation 0 0 -2
          scale 0.1 0.1 0.1
          children Shape {
            appearance Appearance {
              material Material {
                diffuseColor 1 0 0
              }
            }
            geometry Sphere { }
          }
        }
        Shape {
          appearance Appearance {
            material Material { }
          }
          geometry IndexedLineSet {
            colorPerVertex FALSE
            colorIndex [ 0, 1 ]
            coordIndex [ 0, 1, -1, 1, 2, -1 ]
            color Color {
              color [ 1 0 0, 0 1 0 ]
            }
            coord Coordinate {
              point [ 0 0 -2, 0 0 0, 0 0 2 ]
            }
          }
        }
      ]
    }
  ]
}

# Normal
DEF Normal Transform {
  children [
    Shape {
      appearance Appearance {
        material Material { }
      }
      geometry IndexedLineSet {
        colorPerVertex FALSE
        colorIndex [ 0, 1 ]
        coordIndex [ 0, 1, -1 ]
        color Color {
          color [ 1 1 0, 1 1 0 ]
        }
        coord Coordinate {
          point [ 0 0 0, 0 0 2 ]
        }
      }
    }
    Transform {
      translation 0 0 2
      rotation 1 0 0 1.5708
      scale 0.1 0.1 0.1
      children Shape {
        appearance Appearance {
          material Material {
            diffuseColor 1 1 0
          }
        }
        geometry Cone { }
      }
    }
    Transform {
      translation 0 0 2
      scale 0.3 0.3 0.3
      children Billboard {
        axisOfRotation 0 0 0
        children Shape {
          appearance Appearance {
            material Material {
              diffuseColor 0 0 0
            }
          }
          geometry Text {
            string " normal"
          }
        }
      }
    }
  ]
}

DEF AxisScript Script {
  eventIn SFTime     set_x
  eventIn SFTime     set_y
  eventIn SFTime     set_z
  eventIn SFTime     set_xyz
  eventIn SFRotation set_rotation
  eventIn SFVec3f    set_position
  field   SFNode     billboard USE Billboard
  field   SFNode     xform USE XForm
  field   SFNode     absolute USE AxisOfRotation
  field   SFNode     sensor USE AxisSensor
  field   SFNode     normal USE Normal
  field   SFNode     proxy USE Proxy

  url "vrmlscript:
function initialize ()
{
	set_xyz ();
}

function set_x ()
{
	set_axisOfRotation (new SFVec3f (1, 0, 0));
}

function set_y ()
{
	set_axisOfRotation (new SFVec3f (0, 1, 0));
}

function set_z ()
{
	set_axisOfRotation (new SFVec3f (0, 0, 1) .normalize () .multiply (2));
}

function set_xyz ()
{
	set_axisOfRotation (new SFVec3f (1, 1, 1));
}

function set_rotation (value)
{
	set_axisOfRotation (value .multVec (new SFVec3f (0, 0, 1)));
}

function set_position ()
{
	set_axisOfRotation (billboard .axisOfRotation);
}

function set_axisOfRotation (axisOfRotation)
{
	billboard .axisOfRotation = axisOfRotation;
	
	var y = axisOfRotation .cross (proxy .position_changed);

	normal .rotation = new SFRotation (new SFVec3f (0, 0, 1), y);

	print ('axisOfRotation: ' + axisOfRotation);
	print ('y: ', y);

	// 

	axisOfRotation = axisOfRotation .normalize () .multiply (2);

	var axisRotation = new SFRotation (new SFVec3f (0, 0, 1), axisOfRotation);
	absolute .rotation = axisRotation;
	sensor .offset = axisRotation;
}
"
}

ROUTE Proxy.position_changed TO HUD.set_translation
ROUTE Proxy.orientation_changed TO HUD.set_rotation
ROUTE Proxy.position_changed TO AxisScript.set_position
ROUTE TouchX.touchTime TO AxisScript.set_x
ROUTE TouchY.touchTime TO AxisScript.set_y
ROUTE TouchZ.touchTime TO AxisScript.set_z
ROUTE TouchXYZ.touchTime TO AxisScript.set_xyz
ROUTE AxisSensor.rotation_changed TO AxisScript.set_rotation
