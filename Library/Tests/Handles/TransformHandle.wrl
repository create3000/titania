#VRML V2.0 utf8

META "title" "TransformHandle"

EXTERNPROTO Grid [
  exposedField SFInt32 xDimension
  exposedField SFFloat xSpacing
  exposedField SFInt32 zDimension
  exposedField SFFloat zSpacing
  exposedField SFColor color
  exposedField SFFloat transparency
  field        SFBool  solid
]
"Grid.wrl"

Background {
  skyColor 0.3 0.3 0.3
}

Viewpoint {
  description "Front"
  position 10 0 10
  centerOfRotation 10 0 0
}

Grid {
  xDimension 100
  zDimension 100
}

Transform {
  children Transform {
    translation 10 0 0
    rotation 0 -1 0 1.5708
    scale 1 2 3
    children [
      Viewpoint {
        description "Inside"
        centerOfRotation 0 0 1
        retainUserOffsets TRUE
      }
      Shape {
        appearance Appearance {
          material Material {
            diffuseColor 0.5 0 1
            transparency 0.5
          }
        }
        geometry Box { }
      }
    ]
  }
}
