#X3D V3.0 utf8

META "title" "Shader Texture"

Transform {
  translation -2 0 0
  children Shape {
    appearance Appearance {
      shaders ComposedShader {
        inputOutput MFNode myTexture [
          ImageTexture {
            url "../images/image.png"
          }
          ImageTexture {
            url "../images/earth.png"
          }
        ]

        language "GLSL"
        parts [
          DEF VertexShader ShaderPart {
            url "data:text/plain,
#version 120

void main (void)
{
	gl_Position     = ftransform ();
	gl_TexCoord [0] = gl_TextureMatrix [0] * gl_MultiTexCoord0;
}
"
          }
          ShaderPart {
            type "FRAGMENT"
            url "data:text/plain,
#version 120

uniform sampler2D myTexture [2];

void main (void)
{
	gl_FragColor = texture2D (myTexture [1], gl_TexCoord [0] .st);
}
"
          }
        ]
      }
    }
    geometry Sphere { }
  }
}

Transform {
  translation 2 0 0
  children Shape {
    appearance Appearance {
      shaders ComposedShader {
        inputOutput SFNode myTexture MovieTexture {
          url "../../Examples/Vattenfall/stage/film6.mpv"
          loop TRUE
          repeatS FALSE
          repeatT FALSE
        }

        language "GLSL"
        parts [
          USE VertexShader
          ShaderPart {
            type "FRAGMENT"
            url "data:text/plain,
uniform sampler2D myTexture;

void main (void)
{
	gl_FragColor = texture2D (myTexture, gl_TexCoord [0] .st);
}
"
          }
        ]
      }
    }
    geometry Sphere { }
  }
}
