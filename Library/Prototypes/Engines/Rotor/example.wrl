#VRML V2.0 utf8 Titania 0.1

META "title" "Rotor"

EXTERNPROTO Rotor [
  exposedField SFTime     cycleInterval
  exposedField SFVec3f    axis
  exposedField SFFloat    angle
  exposedField SFBool     loop
  exposedField SFTime     startTime
  exposedField SFTime     stopTime
  eventOut     SFRotation value_changed
]
"Rotor.wrl"

EXTERNPROTO Torus [
  field SFFloat minorRadius
  field SFFloat majorRadius
  field SFInt32 minorDimension
  field SFInt32 majorDimension
  field SFBool  solid
  field SFBool  ccw
  field SFFloat creaseAngle
]
"../../Geometry3D/Torus/Torus.wrl"

DEF XRotor Rotor {
  cycleInterval 7
  axis 1 0 0
  loop TRUE
}

DEF YRotor Rotor {
  cycleInterval 11
  axis 0 1 0
  loop TRUE
}

DEF ZRotor Rotor {
  cycleInterval 13
  loop TRUE
}

DEF Z Transform {
  children [
    DEF Y Transform {
      children [
        DEF X Transform {
          children Shape {
            appearance Appearance {
              material Material { }
            }
            geometry Torus {
              minorRadius 0.2
              majorRadius 2
              minorDimension 40
              majorDimension 80
            }
          }
        }
        Transform {
          rotation 1 0 0 1.5708
          children Shape {
            appearance Appearance {
              material Material { }
            }
            geometry Torus {
              minorRadius 0.2
              majorRadius 2.4
              minorDimension 40
              majorDimension 80
            }
          }
        }
      ]
    }
    Transform {
      rotation 0 0 1 1.5708
      children Shape {
        appearance Appearance {
          material Material { }
        }
        geometry Torus {
          minorRadius 0.2
          majorRadius 2.8
          minorDimension 40
          majorDimension 80
        }
      }
    }
  ]
}

ROUTE XRotor.value_changed TO X.set_rotation
ROUTE YRotor.value_changed TO Y.set_rotation
ROUTE ZRotor.value_changed TO Z.set_rotation
