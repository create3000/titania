        }
        Button {
          children [
            DEF _1 Transform {
              translation -2.5 0 0
              children DEF Active Shape {
                appearance Appearance {
                  material Material {
                    diffuseColor 0.4 0.4 0.4
                  }
                }
                geometry Box { }
              }
            }
            USE _1
            USE _1
            USE _1
          ]
        }
      ]
    }
    CheckButton {
      children [
        Button {
          children [
            DEF _2 Transform {
              children USE Default
