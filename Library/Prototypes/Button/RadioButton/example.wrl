]
"../CheckButton/CheckButton.wrl"

EXTERNPROTO RadioButton [
  exposedField SFInt32 whichChoice
  eventIn      MFNode  addChildren
  eventIn      MFNode  removeChildren
  exposedField MFNode  children
]
"RadioButton.wrl"

RadioButton {
  whichChoice 0
