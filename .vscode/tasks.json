{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Make",
            "type": "shell",
            "command": "flatpak-spawn --host make -j5",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "flatpak-spawn --host make run",
            "problemMatcher": []
        },
        {
            "label": "Configure Solution",
            "type": "shell",
            "command": "flatpak-spawn --host ./autogen.sh --enable-debug --enable-feature",
            "problemMatcher": []
        },
        {
            "label": "Make Version",
            "type": "shell",
            "command": "flatpak-spawn --host make version",
            "problemMatcher": []
        },
        {
            "label": "Git Push GitHub",
            "type": "shell",
            "command": "flatpak-spawn --host git push github",
            "problemMatcher": []
        },
        {
            "label": "Git List Untracked Files",
            "type": "shell",
            "command": "flatpak-spawn --host git ls-files --others --exclude-standard",
            "problemMatcher": []
        },
        {
            "label": "Commit Library",
            "type": "shell",
            "command": "flatpak-spawn --host /home/holger/bin/git-commit-library.sh",
            "problemMatcher": []
        },
        {
            "label": "Erzeugung oder Ausf√ºhrung anhalten",
            "type": "shell",
            "command": "flatpak-spawn --host killall make",
            "problemMatcher": []
        },
    ]
}
