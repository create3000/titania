#!/usr/bin/make -f

export DH_COMPAT=5

PACKAGE=$(shell dh_listpackages)

build:
	dh_testdir

clean:
	dh_testdir
	dh_testroot
	dh_clean -d

binary-indep: build

binary-arch: build
	dh_testdir
	dh_testroot
	dh_clean -k -d

	dh_installdocs
	dh_installchangelogs

# Make and install binaries
	#make distclean
	./autogen.sh --enable-fixed-pipeline --enable-parallel --prefix=`pwd`/debian/$(PACKAGE)/usr/
	make -j4
	make install

	dh_compress
	dh_makeshlibs
	dh_installdeb
#	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary
